{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "timeseries",
      "title": "NGINX Pod CPU Usage (cores)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"nginx.*\", container!=\"POD\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "NGINX Pod Memory Usage",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{pod=~\"nginx.*\", container!=\"POD\"}) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "NGINX Pod Network Receive (bytes/sec)",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total{pod=~\"nginx.*\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "NGINX Pod Network Transmit (bytes/sec)",
      "targets": [
        {
          "expr": "sum(rate(container_network_transmit_bytes_total{pod=~\"nginx.*\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pod Restarts",
      "targets": [
        {
          "expr": "sum(kube_pod_container_status_restarts_total{pod=~\"nginx.*\"}) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pod Ready Status",
      "targets": [
        {
          "expr": "kube_pod_status_ready{pod=~\"nginx.*\", condition=\"true\"}",
          "legendFormat": "{{pod}}"
        }
      ]
    }
  ],
  "schemaVersion": 36,
  "title": "NGINX Pod Monitoring"
}
